include "/etc/bind/rndc.key";

options {
    directory "/var/cache/bind";
    allow-new-zones yes;
    request-ixfr no;
    dnssec-validation auto;
    allow-query { any; };
    #allow-recursion { any; }
    auth-nxdomain no;    # conform to RFC1035
    #listen-on port 5322 { 10.164.178.43; 10.164.178.42; };
    listen-on port 5322 { any; };
    recursion no;
    minimal-responses yes;
};

controls {
    inet * port 953 allow { 10.164.178.43; 10.164.178.42;any; } keys { "rndc-key"; };
};
